{
  "name": "appointment-system",
  "scripts": {
    "install": "npm run install-all",
    "install-all": "cd client && npm install && cd ../server && npm install",
    "start": "npm run start:all",
    "start:all": "concurrently \"npm --prefix server start\" \"npm --prefix client start\""
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  }
}
